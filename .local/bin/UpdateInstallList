#!/bin/bash

pacman -Qqen > installedPacman-new.txt

if [ ! -z $(diff installedPacman.txt installedPacman-new.txt) ]; then
    nvim -d installedPacman.txt installedPacman-new.txt
fi

pacman -Qqem > installedAUR-new.txt
if [ ! -z $(diff installedAUR.txt installedAUR-new.txt) ]; then
    nvim -d installedAUR.txt installedAUR-new.txt
fi

mv -f installedPacman-new.txt installedPacman.txt
mv -f installedAUR-new.txt installedAUR.txt
