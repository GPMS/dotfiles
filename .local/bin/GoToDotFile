#!/bin/bash

aliases="Aliases"
Dir="$HOME/.aliases"

profile="Profile"
profileDir="$HOME/.profile"

xprofile="X Profile"
xprofileDir="$HOME/.xprofile"

scripts="Scripts"
scriptsDir="$HOME/.local/bin"

neovim="NeoVim"
neovimDir="$HOME/.config/nvim/init.vim"

i3="i3"
i3Dir="$HOME/.config/i3/config"

zsh="Zsh"
zshDir="$HOME/.config/zsh"

polybar="Polybar"
polybarDir="$HOME/.config/polybar/config"

dmenu="Dmenu"
dmenuDir="$HOME/.config/dmenu/config.h"

configFiles="$aliases\n$profile\n$xprofile\n$scripts\n$neovim\n$i3\n$zsh\n$polybar\n$dmenu"

case `echo -e $configFiles | dmenu -i` in
    $aliases) $TERMINAL -e $EDITOR $aliasesDir ;;
    $profile) $TERMINAL -e $EDITOR $profileDir ;;
    $xprofile) $TERMINAL -e $EDITOR $xprofileDir ;;
    $scripts) $TERMINAL -e $EDITOR $scriptsDir ;;
    $neovim) $TERMINAL -e $EDITOR $neovimDir ;;
    $i3) $TERMINAL -e $EDITOR $i3Dir ;;
    $zsh) $TERMINAL -e $EDITOR $zshDir ;;
    $polybar) $TERMINAL -e $EDITOR $polybarDir ;;
    $dmenu) $TERMINAL -e $EDITOR $dmenuDir ;;
esac
