#!/bin/bash

aliases="Aliases"
aliasesFile="$HOME/.aliases"

profile="Profile"
profileFile="$HOME/.profile"

xprofile="X Profile"
xprofileFile="$HOME/.xprofile"

scripts="Scripts"
scriptsFile="$HOME/.local/bin/"

neovim="NeoVim"
neovimFile="$HOME/.config/nvim/init.vim"

i3="i3"
i3File="$HOME/.config/i3/config"

zsh="Zsh"
zshFile="$HOME/.config/zsh"

polybar="Polybar"
polybarFile="$HOME/.config/polybar/config"

dmenu="Dmenu"
dmenuFile="$HOME/.config/dmenu/config.h"

alacritty="Alacritty"
alacrittyFile="$HOME/.config/alacritty/alacritty.yml"

OpenFile()
{
    cd $2
    $TERMINAL -e $EDITOR $1
}

configFiles="$aliases\n$profile\n$xprofile\n$scripts\n$neovim\n$i3\n$zsh\n$polybar\n$dmenu\n$alacritty"
case `echo -e $configFiles | dmenu -i` in
    $aliases) OpenFile $aliasesFile $HOME ;;
    $profile) OpenFile $profileFile $HOME ;;
    $xprofile) OpenFile $xprofileFile $HOME ;;
    $scripts) OpenFile $scriptsFile $HOME/.local/bin ;;
    $neovim) OpenFile $neovimFile $HOME/.config/nvim ;;
    $i3) OpenFile $i3File $HOME/.config/i3 ;;
    $zsh) OpenFile $zshFile $HOME/.config/zsh ;;
    $polybar) OpenFile $polybarFile $HOME/.config/polybar ;;
    $dmenu) OpenFile $dmenuFile $HOME/.config/dmenu ;;
    $alacritty) OpenFile $alacrittyFile $HOME/.config/alacritty ;;
esac
