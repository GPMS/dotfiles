# vim: filetype=sh
alias update='sudo pacman -Syu'
alias update-AUR='yay -Syu --devel'
alias search='yay -Ss'
alias clean='yay -Rsnu $(yay -Qqdt); yay -Sc'
alias install='yay -S '
alias remove='yay -Rsn'
alias ping='ping -c 5 '
alias vim='nvim'
alias testInternet="ping -c 5 www.google.com"

alias config='/usr/bin/git --git-dir=$HOME/dotfiles --work-tree=$HOME'

