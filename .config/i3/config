## Basic Definitions ##

for_window [class="^.*"] border pixel 3
gaps inner 5
gaps outer 5
smart_gaps on
smart_borders on
set $term --no-startup-id urxvt
set $mod Mod4

## Autostart ##

exec --no-startup-id feh --bg-scale /$HOME/Images/wallpaper.jpg
#exec --no-startup-id nm-applet
exec_always --no-startup-id $HOME/.config/polybar/launch.sh
exec_always --no-startup-id udiskie -2 &
exec --no-startup-id lxpolkit
exec --no-startup-id dunst
exec --no-startup-id fcitx -d
exec --no-startup-id $HOME/Scripts/open_email_client.sh
exec --no-startup-id $HOME/Scripts/battery_notifications.sh

## Miscelaneous Bindings ##

for_window [class="URxvt" title="dropdown"] floating enable
bindsym $mod+Return             exec $term
bindsym $mod+Shift+Return       exec urxvt -name "dropdown"

bindsym $mod+space              focus mode_toggle
bindsym $mod+Shift+space        floating toggle
floating_modifier $mod

