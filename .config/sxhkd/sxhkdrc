# vim:ft=sxhkdrc

super + Return
    kitty
super + shift + b
    chromium
super + shift + f
    kitty lf
super + shift + q
    SystemMenu.sh
super + shift + x
    xkill
super + shift + n
    kitty --title "newsboat" newsboat
super + shift + s
    LaunchScript.sh
super + d
    i3-dmenu-desktop -dmenu="dmenu -i -c -l 5 -p 'Program'"

## XF86 Keys ##

Print
    scrot

# Volume
XF86AudioRaiseVolume
    pulseaudio-ctl up
XF86AudioLowerVolume
    pulseaudio-ctl down
XF86AudioMute
    pulseaudio-ctl mute

# Brightness
XF86MonBrightnessUp
    xbacklight -inc 10
XF86MonBrightnessDown
    xbacklight -dec 10

# Media
XF86AudioPlay
    mpc toggle
XF86AudioStop
    mpc stop
XF86AudioNext
    mpc next
XF86AudioPrev
    mpc prev

